<%= form_for @search, :html => { :class => 'well inline-form' } do |f| %>
    <%= f.text_field :group_number_eq, :placeholder => 'Group #', :class => 'input-mini' %>
    <%= f.text_field :lesson_like, :placeholder => 'Lesson' %>
    <%= f.text_field :teacher_name_like, :placeholder => 'Teacher' %>
    
    <%= button_tag 'Search', :class => 'btn' do %>
        <i class="icon-search"></i>
        Search
    <% end %>
<% end %>