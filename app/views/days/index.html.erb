<h1>Listing days</h1>

<table>
  <tr>
    <th>N</th>
    <th>Schedule</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @days.each do |day| %>
  <tr>
    <td><%= day.n %></td>
    <td><%= day.schedule_id %></td>
    <td><%= link_to 'Show', day %></td>
    <td><%= link_to 'Edit', edit_day_path(day) %></td>
    <td><%= link_to 'Destroy', day, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

