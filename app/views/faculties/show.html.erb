<h1>/Faculty</h1>

<p>
  <b>Name</b><br>
  <%= @faculty.name %>
</p>

<p>
  <b>Description</b><br>
  <%= @faculty.description %>
</p>

<div class="form-actions">
  <%= link_to 'Back', faculty_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_faculty_path(@faculty), :class => 'btn' %>
  <%= link_to 'Delete', faculty_path(@faculty), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
